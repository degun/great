<amp-sidebar id="sidebar" class="mobilemenu" layout="nodisplay" side="right">
  <i on="tap:sidebar.close" class="fas fa-times"></i>
  <nav class="mobile">
    <img src="{{logos.main_logo | relative}}" alt="Logo" class="logo">
    {% set navPages = menus %}
    {%- for entry in navPages %}
        {% if entry.children %}
        <div class="with-subs">
            <a href="{{ entry.route | url }}"{% if entry.route == page.url %} class="current"{% endif %} aria-label="View all details about {{ entry.name }}">{{ entry.name }}</a>
            <div class="sub">
            {% for child in entry.children %}
                <a href="{{ child.route | url }}"{% if child.route == page.url %} class="current"{% endif %} aria-label="View all details about {{ child.name }}">{{ child.name }}</a>
            {% endfor %}
            </div>
        </div>
        {% else %}
        <a href="{{ entry.route | url }}"{% if entry.route == page.url %} class="current" {% endif %} aria-label="View all details about {{ entry.name }}">{{ entry.name }}</a>
        {% endif %}
    {%- endfor %}
    </nav>
</amp-sidebar>