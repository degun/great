<nav class="header-menu">
  {%- for entry in menus %}
    {% if entry.children %}
      <div class="with-submenu">
        <a href="{{ entry.route | url }}#content"{% if entry.route == page.url %} class="current"{% endif %}>{{ entry.name }}</a>
        <div class="submenu">
          {% for child in entry.children %}
            <a href="{{ child.route | url }}#content"{% if child.route == page.url %} class="current"{% endif %}>{{ child.name }}</a>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <a href="{{ entry.route | url }}#content"{% if entry.route == page.url %} class="current" {% endif %}>{{ entry.name }}</a>
    {% endif %}
  {%- endfor %}
</nav>
