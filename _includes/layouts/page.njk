---
layout: layouts/base.njk
section: page
---
{% from "components/pagetitle.njk" import pageTitle %}
{{pageTitle(title)}}

<div class="page" id="content">
    <div class="sider">
        {% for service in menus[2].children %}
            <a href="{{service.route}}#content" {% if service.route == page.url %} class="active" {% endif %}>
                <img src="{{service.icon}}" />
                {{service.name}}
            </a>
        {% endfor %}
    </div>
    <div class="body">
        <img src="{{image}}" alt="Example of {{title}} work" />
        {{ layoutContent | safe }}
    </div>
</div>
